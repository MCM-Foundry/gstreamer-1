cd gst-plugins-base
#./autogen.sh --disable-{gtk-doc,tests,exaxmples,debug,debugutils,orc} && make && make install && ldconfig
cd ..

cd gst-plugins-good
#./autogen.sh --disable-{gtk-doc,tests,examples,debug,debugutils} --disable-{apetag,audiofx,auparse,cutter,effectv,interleave,flx,goom,goom2k1,imagefreeze,law,level,matroska,monoscope,multifile,multipart,replaygain,shapewipe,smpte,spectrum,y4m,waveform,oss,oss4,sunaudio,osx_audio,osx_video,x,xshm,aalib,aalibtest,annodex,cairo,cairo_gobject,esd,esdtest,flac,gconf,gdk_pixbuf,jack,jpeg,libcaca,libdv,libpng,dv1394,shout2,soup,taglib,wavpack} && make && make install && ldconfig
