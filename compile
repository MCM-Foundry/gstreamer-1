cd gst-plugins-bad
#./autogen.sh --disable-{gtk-doc,tests,examples,debug,debugutils,fatal-warnings} --enable-experimental --disable-{audiovisualizers,bayer,cdxaparse,dccp,dtmf,dvbsuboverlay,dvdspu,faceoverlay,festival,fieldanalysis,freeze,freeverb,frei0r,gaudieffects,geometrictransform,hls,inter,ivfparse,jp2kdecimator,liveadder,mve,mxf,nsf,nuvdemux,patchdetect,pcapparse,pnm,scaletempo,sdi,segmentclip,siren,smooth,speed,subenc,tta,vmnc,y4m,directsound,wasapi,direct3d,directdraw,direct3d9,directshow,android_media,apple_media,osx_video,shm,vcd,opensles,assrender,voamrwbenc,voaacenc,apexsink,cdaudio,celt,chromaprint,cog,dc1394,decklink,wayland,dirac,dts,resindvd,faac,faad,flite,gsm,jp2k,liveadder,ladspa,lv2,libmms,linsys,modplug,mimic,mplex,musepack,musicbrainz,mythtv,nas,neon,ofa,openal,opencv,opus,pvr,rsvg,eglgles,timidity,teletextdec,wildmidi,sdl,sdltest,sndfile,soundtouch,spc,gme,vp8,swfdec,dvb,wininet,acm,vdpau,schro,zbar,spandsp,gsettings,schemas-compile,sndio,isomp4}
